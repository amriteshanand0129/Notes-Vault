<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes Website</title>
    <script src="/js/script.js"></script>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        .resourcesContent {
            margin: 5%;
            width: 60%;
            border-radius: 10px;
            height: 500px;
            background-image: url("/images/Home.png");
            background-size: cover;
        }

        #resourcesButton {
            border: 1px solid white;
            border-radius: 20px;
            margin: 300px 100px auto 590px;
            padding: 10px 30px;
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            font-size: 3vh;
            transition: all 0.3s ease;
        }

        #resourcesButton:hover {
            box-shadow: 0px 5px 10px rgba(255, 255, 255, 0.8);
            transform: translateY(-3px);
        }

        .contributeOuterBody {
            display: block;
            height: 400px;
        }

        .contributeContent {
            width: 60%;
            height: 400px;
            margin-right: 5%;
            margin-bottom: 20px;
            float: right;
            background-image: url("/images/Contribute.png");
            background-size: cover;
            border-radius: 10px;
            text-align: center;
        }

        #contributeButton {
            border: 1px solid white;
            border-radius: 20px;
            margin-top: 30%;
            padding: 10px 30px;
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            font-size: 3vh;
            transition: all 0.3s ease;
        }

        #contributeButton:hover {
            box-shadow: 0px 1px 10px rgba(255, 255, 255, 0.8);
            transform: translateY(-3px);
        }

        #footer {
            display: block;
            width: 99%;
            margin: auto;
            margin-bottom: 20px;
            padding: 50px;
            border-radius: 10px;
            background-color: rgba(0, 0, 0, 0.9);
            text-align: center;
            color: white;
        }

        #footer a {
            text-decoration: none;
            color: white;
            transition: all 0.3s ease;
        }

        .mainbody {
            padding-top: 100px;
        }

        .alert {
            width: 80%;
            margin: auto;
            text-align: center;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg border-bottom border-body fixed-top"
        style="padding: 10px; background-color: white;">
        <div class="container-fluid">
            <img src="/images/Logo.png" alt="Logo" height="60px" width="220px">
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav" style="margin-left: auto;">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/resources">Resources</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#footer">Contact Us</a>
                    </li>
                    <% if (user !=undefined ) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <%= user.name %>
                            </a>
                            <ul class="dropdown-menu">
                                <% if (user.userType=="CUSTOMER" ) { %>
                                    <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                    <li><a class="dropdown-item" onclick="logout()" style="cursor:pointer;">Logout</a>
                                    </li>
                                    <% } %>
                            </ul>
                        </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                            <% } %>

                </ul>
            </div>
        </div>
    </nav>

    <div class="mainbody">
        <div id="message"></div>
        <div class="resourcesContent">
            <a href="/resources"><button id="resourcesButton">RESOURCES</button></a><br>
        </div>
        <div class="contributeOuterBody">
            <div class="contributeContent">
                <button id="contributeButton" onclick="addResources()">CONTRIBUTE</button>
            </div>
        </div>
        <br>
        <div id="footer">
            <h4>Contact Us</h4><br>
            <a href="mailto:amritesh2901@gmail.com">
                <h5>Email</h5>
            </a>
            <a href="https://www.linkedin.com/in/amritesh-anand/" target="_blank">
                <h5>Linkedin</h5>
            </a>
            <a href="https://github.com/amriteshanand0129/Notes-Vault" target="_blank">
                <h5>Github</h5>
            </a>
        </div>
    </div>

    <script>
        const message = sessionStorage.getItem('message');
        if (message) {
            const alertDiv = document.createElement("div");
            alertDiv.className = "alert alert-success alert-dismissible fade show";
            alertDiv.role = "alert";
            alertDiv.innerHTML = `${message}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
            document.getElementById("message").appendChild(alertDiv);
            sessionStorage.removeItem('message');
        }
        const warning = sessionStorage.getItem('warning');
        if (warning) {
            const alertDiv = document.createElement("div");
            alertDiv.className = "alert alert-warning alert-dismissible fade show";
            alertDiv.role = "alert";
            alertDiv.innerHTML = `${warning}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
            document.getElementById("message").appendChild(alertDiv);
            sessionStorage.removeItem('warning');
        }
        const error = sessionStorage.getItem('error');
        if (error) {
            const alertDiv = document.createElement("div");
            alertDiv.className = "alert alert-danger alert-dismissible fade show";
            alertDiv.role = "alert";
            alertDiv.innerHTML = `${error}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
            document.getElementById("message").appendChild(alertDiv);
            sessionStorage.removeItem('error');
        }
        async function addResources() {
            try {
                const response = await fetch("/addResources")
                const data = await response.json()
                if (response.ok) {
                    window.location.href = data.redirectTo;
                }
                else {
                    sessionStorage.setItem('warning', data.warning);
                    window.location.href = data.redirectTo
                }
            } catch (error) {
                console.log(error)
                sessionStorage.setItem('error', "Error: Cannot send request to server");
                window.location.href = "/";
            }
        }
    </script>
</body>

</html>