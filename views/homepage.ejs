<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes Vault</title>
    <script src="/js/script.js"></script>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poetsen+One&display=swap" rel="stylesheet">
    <style>
        .resourcesOuterBody {
            width: 90%;
            height: 65vh;
            margin: auto;
            margin-top: 30px;
            border-radius: 15px;
            background-image: linear-gradient(to top right, #30cfd0 0%, #330867 100%);
            color: white;
            text-align: center;
        }

        .resourcesContent {
            padding-top: 12%;
        }

        h1 {
            font-family: "Poetsen One", sans-serif;
            font-size: 50px;
            font-weight: 400;
            font-style: normal;
        }

        .contributeOuterBody {
            width: 90%;
            height: 65vh;
            margin: auto;
            margin-top: 50px;
            border-radius: 15px;
            background-color: #DCD9D4;
            background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.50) 0%, rgba(0, 0, 0, 0.50) 100%), radial-gradient(at 50% 0%, rgba(255, 255, 255, 0.10) 0%, rgba(0, 0, 0, 0.50) 50%);
            background-blend-mode: soft-light, screen;
            text-align: center;
        }

        .contributeContent {
            padding-top: 12%;
        }

        .Button {
            border-radius: 20px;
            padding: 10px 30px;
            background-color: rgba(255, 255, 255, 0.1);
            font-size: 2.5vh;
            transition: all 0.3s ease;
        }

        #ResourcesButton {
            border: 1px solid white;
            color: white;
        }

        #ContributeButton {
            border: 1px solid black;
            color: black;
        }

        #ResourcesButton:hover {
            box-shadow: 0px 5px 10px rgba(255, 255, 255, 0.8);
            transform: translateY(-3px);
        }

        #ContributeButton:hover {
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.8);
            transform: translateY(-3px);
        }

        #footer {
            display: block;
            width: 99%;
            margin: auto;
            margin-bottom: 20px;
            padding: 50px;
            border-radius: 10px;
            background-color: rgba(0, 0, 0, 0.9);
            text-align: center;
            color: white;
        }

        #footer a {
            text-decoration: none;
            color: white;
            transition: all 0.3s ease;
        }

        .mainbody {
            padding-top: 100px;
        }

        .alert {
            width: 80%;
            margin: auto;
            text-align: center;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg border-bottom border-body fixed-top"
        style="padding: 10px; background-color: white;">
        <div class="container-fluid">
            <img src="/images/Logo.png" alt="Logo" height="60px" width="220px">
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav" style="margin-left: auto;">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/resources">Resources</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#footer">Contact Us</a>
                    </li>
                    <% if (user !=undefined ) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <%= user.name %>
                            </a>
                            <ul class="dropdown-menu">
                                <% if (user.userType=="CUSTOMER" ) { %>
                                    <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                    <li><a class="dropdown-item" onclick="logout()" style="cursor:pointer;">Logout</a>
                                    </li>
                                    <% } %>
                            </ul>
                        </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">Login</a>
                            </li>
                            <% } %>

                </ul>
            </div>
        </div>
    </nav>

    <div class="mainbody">
        <div id="message"></div>
        <div class="resourcesOuterBody">
            <div class="resourcesContent">
                <h1>LOOKING FOR COLLEGE NOTES ?</h1>
                <h1>CHECK OUT OUR</h1>
                <br>
                <a href="/resources"><button class="Button" id="ResourcesButton">RESOURCES</button></a><br>
            </div>
        </div>
        <div class="contributeOuterBody">
            <div class="contributeContent">
                <h1>CONTRIBUTE YOUR NOTES AND HELP YOUR PEERS !</h1>
                <br>
                <button class="Button" id="ContributeButton" onclick="addResources()">CONTRIBUTE</button>
            </div>
        </div>
        <br>
        <div id="footer">
            <h4>Contact Us</h4><br>
            <a href="mailto:amritesh2901@gmail.com">
                <h5>Email</h5>
            </a>
            <a href="https://www.linkedin.com/in/amritesh-anand/" target="_blank">
                <h5>Linkedin</h5>
            </a>
            <a href="https://github.com/amriteshanand0129/Notes-Vault" target="_blank">
                <h5>Github</h5>
            </a>
        </div>
    </div>

    <script>
        const message = sessionStorage.getItem('message');
        if (message) {
            const alertDiv = document.createElement("div");
            alertDiv.className = "alert alert-success alert-dismissible fade show";
            alertDiv.role = "alert";
            alertDiv.innerHTML = `${message}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
            document.getElementById("message").appendChild(alertDiv);
            sessionStorage.removeItem('message');
        }
        const warning = sessionStorage.getItem('warning');
        if (warning) {
            const alertDiv = document.createElement("div");
            alertDiv.className = "alert alert-warning alert-dismissible fade show";
            alertDiv.role = "alert";
            alertDiv.innerHTML = `${warning}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
            document.getElementById("message").appendChild(alertDiv);
            sessionStorage.removeItem('warning');
        }
        const error = sessionStorage.getItem('error');
        if (error) {
            const alertDiv = document.createElement("div");
            alertDiv.className = "alert alert-danger alert-dismissible fade show";
            alertDiv.role = "alert";
            alertDiv.innerHTML = `${error}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
            document.getElementById("message").appendChild(alertDiv);
            sessionStorage.removeItem('error');
        }
        async function addResources() {
            try {
                const response = await fetch("/addResources")
                const data = await response.json()
                if (response.ok) {
                    window.location.href = data.redirectTo;
                }
                else {
                    sessionStorage.setItem('warning', data.warning);
                    window.location.href = data.redirectTo
                }
            } catch (error) {
                console.log(error)
                sessionStorage.setItem('error', "Error: Cannot send request to server");
                window.location.href = "/";
            }
        }
    </script>
</body>

</html>